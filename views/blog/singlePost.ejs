<%- include('../partials/blogHeader') %>
    <style>
        pre {
            font-family: 'Courier New', Courier, monospace;
            background: black;
            color: white;
            /* white-space: pre-wrap; */
            width: 100%;
            max-height: 400px;
            padding: 10px;
            overflow: auto;
            margin-bottom: 20px;
        }
        
        .single-post h1 {
            font-size: 3rem;
        }
        
        .single-post h2 {
            font-size: 2.5rem;
        }
        
        .single-post h3 {
            font-size: 2rem;
        }
        
        .single-post h4 {
            font-size: 1.5rem;
        }
        
        @media (max-width: 700px) {
            .single-post h1 {
                font-size: 2.5rem;
            }
            .single-post h2 {
                font-size: 2rem;
            }
            .single-post h3 {
                font-size: 1.7rem;
            }
            .single-post h4 {
                font-size: 1.2rem;
            }
        }
    </style>
    <main class="container mt mb single-post">
        <a href="/blog" class="btn blue"><i class="Medium material-icons">chevron_left</i></a>
        <div class="row">
            <div class="col s12 l10 offset-l1">
                <h2 class="mb-s">
                    <%= post.title %>:
                        <br/><span class="badge left"><small>The post was written <%= post.day %> day(s) ago</small></span>
                </h2>
                <br>
                <div>
                    <img src="<%= post.image %> " alt="<%= post.title %>" style="width: 100%; height: auto;">
                </div>
                <div>
                    <%- post.sanitizeHTML %>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>